//---------------------------------------------------------------------------
void __fastcall TFAnswer::Image2Click(TObject *Sender)
{
    SD->Execute();
	FProjects->memo=new TMemo(FProjects);
	FProjects->memo->Parent=FProjects;
	FProjects->memo->Visible=false;
}
