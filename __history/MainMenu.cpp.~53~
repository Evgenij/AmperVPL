void __fastcall TFormMenu::Label3Click(TObject *Sender)
{
	FormMenu->Hide();
	//FAnswer->Show();
	FProjects->Show();
}
//---------------------------------------------------------------------------

void __fastcall TFormMenu::Label6Click(TObject *Sender)
{
	if(FProjects->lab!=NULL)
	{
        //FProjects->lab->DestroyComponents();
		FProjects->lab->Destroying();
		FProjects->lab->Close();
        FormMenu->Close();
	}
	else
	{
		FormMenu->Close();
	}
}
